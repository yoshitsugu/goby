# Functions are defined with `=`
add_ten : Int -> Int
add_ten x = x + 10

# A block returns the value of its last line
add_ten_mul_three : Int -> Int
add_ten_mul_three a =
  b = a + 10
  b * 3

# Higher-order function
mul_tens : List Int -> List Int
mul_tens ns = map ns (|n| -> n * 10)

# Anonymous functions can also be written as:
mul_tens_short : List Int -> List Int
mul_tens_short ns = map ns (_ * 10)

main : Unit -> Unit
main =
  b = add_ten 10
  c = add_ten_mul_three b
  # 90
  print c

  # [30, 40, 50]
  mul_tens [3, 4, 5] |> print

  # [60, 70]
  mul_tens_short [6, 7] |> print
